<myClass>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 40
        #Label is basically text
        Label:
            text: "MedSet"
            font_size: 12
            #Font color works a little differently, you get the RGB values, divide it by 255 and puts the result as argument
            #Example: 255/255 = 1, so we put 1; 117/255 = 0,45882352941176470588235294117647, so we put 0.45
        Label:
            id: input_label
            font_size: 64
        Button:
            text: "Teste"
            on_press: root.change_label()
            size_hint: None, None
            width: 100
            height: 50
            pos_hint: {'center_x':0.5}
        TextInput:
            id: input_text
