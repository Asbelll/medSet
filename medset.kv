#:import Register main.Register
#:import Login main.Login

<Login>:
    MDBoxLayout:
        md_bg_color: 0.192, 0.207, 0.223 #313539 rgb 49, 53, 57
        size_hint: None, None
        size: dp(300), dp(400)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: dp(10)
        padding: dp(25)
        spacing: dp(25)
        orientation: 'vertical'

        MDLabel:
            font_style: "Display"
            role: "small"
            text: 'Login'
            halign: 'center'

        MDButton:
            id: button
            mode: 'outlined'
            pos_hint: {"center_x": 0.5}
            on_release: Login().openMenu()

            MDButtonText:
                id: button2
                text: "Usuário"

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            padding: dp(35)
            MDButton:
                id: buttonLogin
                mode: 'outlined'
                on_release: Login().confirm()

                MDButtonText:
                    text: "Entrar"

            MDButton:
                style: 'elevated'
                on_release: app.root.current = 'register'

                MDButtonText:
                    text: 'Register'

<Register>:
    MDBoxLayout:
        md_bg_color: 0.192, 0.207, 0.223 #313539 rgb 49, 53, 57
        size_hint: None, None
        size: dp(300), dp(400)
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: dp(10)
        padding: dp(25)
        spacing: dp(25)
        orientation: 'vertical'

        MDLabel:
            font_style: "Display"
            role: "small"
            text: 'Register'
            halign: 'center'

        MDTextField:
            id: user
            mode: "outlined"
            size_hint_x: None
            width: dp(240)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDTextFieldLeadingIcon:
                icon: 'account'

            MDTextFieldHintText:
                text: 'Usuário'

        MDTextField:
            id: birthday
            mode: "outlined"
            size_hint_x: None
            width: dp(240)
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_focus: Register().showCalendar(self.focus)

            MDTextFieldLeadingIcon:
                icon: 'cake'

            MDTextFieldHintText:
                text: 'Nascimento'

        BoxLayout:
            orientation: 'horizontal'
            spacing: dp(5)
            padding: dp(35)
            MDButton:
                style: 'elevated'
                on_release: Register().createAccount()

                MDButtonText:
                    text: 'Register'
            
            MDButton:
                style: 'elevated'
                on_release: app.root.current = 'login'

                MDButtonText:
                    text: 'Cancel'