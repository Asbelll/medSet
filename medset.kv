#:import Register main.Register

<Login>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            font_style: "Display"
            role: "small"
            text: 'Login'
            halign: 'center'

        MDButton:
            style: 'elevated'
            text: 'Go to register'
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            on_release: app.root.current = 'register'

            MDButtonText:
                text: 'Register'

<Register>:
    MDCard:
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 25
        spacing: 25
        orientation: 'vertical'

        MDLabel:
            font_style: "Display"
            role: "small"
            text: 'Register'
            halign: 'center'

        MDTextField:
            id: user
            mode: "outlined"
            size_hint_x: None
            width: 240
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

            MDTextFieldLeadingIcon:
                icon: 'account'

            MDTextFieldHintText:
                text: 'Usu√°rio'

        MDTextField:
            id: birthday
            mode: "outlined"
            size_hint_x: None
            width: 240
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            on_focus: Register().showCalendar(self.focus)

            MDTextFieldLeadingIcon:
                icon: 'cake'

            MDTextFieldHintText:
                text: 'Nascimento'

        MDButton:
            style: 'elevated'
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            on_release: Register().createAccount()

            MDButtonText:
                text: 'Go to login'